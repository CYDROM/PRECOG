<UserControl x:Class="Precog.Controls.Utilities"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Name="RootLayout" Margin="5">
            <GroupBox Header="Heat Map" Name="grpHeatMap">
                <Button Name="btnCreateHeatMap" Content="Create" Click="btnCreateHeatMap_Click" Height="25" Width="100" Margin="5"/>
            </GroupBox>
            <GroupBox Header="Other cool Util" Name="grpCool">
                <Label Content="Some cool stuff going on in here!" Margin="5" />
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
